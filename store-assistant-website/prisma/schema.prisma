model Store {
    id String @id @db.Uuid @default(cuid())
    createdAt String
    userid String @db.Uuid
    name String
    description String
    location String
    prompt String
}

model OnlineStore {
    id String @id @db.Uuid @default (cuid())
    createdAt String
    userid String @db.Uuid
    name String
    description String
    website String
    prompt String
}